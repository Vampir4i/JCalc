<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primaryButton" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="portPrimaryButton" parent="primaryButton">
        <item name="android:textSize">75sp</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="landPrimaryButton" parent="primaryButton">
        <item name="android:textSize">45sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="numberButton" parent="portPrimaryButton">
        <item name="android:background">@color/numberButton</item>
    </style>

    <style name="operationButtonDark" parent="portPrimaryButton">
        <item name="android:background">@color/operationButtonDark</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="operationButtonLight" parent="portPrimaryButton">
        <item name="android:background">@color/operationButtonLight</item>
        <item name="layout_constraintHorizontal_weight">1</item>
    </style>

    <style name="landNumberButton" parent="landPrimaryButton">
        <item name="android:background">@color/numberButton</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="landOperationButtonDark" parent="landPrimaryButton">
        <item name="android:background">@color/operationButtonDark</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="landOperationButtonLight" parent="landPrimaryButton">
        <item name="android:background">@color/operationButtonLight</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="primaryTextView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textSize">70sp</item>
        <item name="android:text">""</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/textField</item>
        <item name="android:layout_margin">3dp</item>
    </style>
</resources>